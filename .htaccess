<FilesMatch "^(private-page|admin|secret).*\.html$">
  AuthType Basic
  AuthName "Restricted Area"
  AuthUserFile /path/to/.htpasswd
  Require valid-user
</FilesMatch>

# Allow access to web manifest
<Files "site.webmanifest">
  Require all granted
</Files>

# Allow access to image and script assets
<FilesMatch "\.(jpg|jpeg|png|gif|js|css|json|webmanifest)$">
  Require all granted
</FilesMatch>